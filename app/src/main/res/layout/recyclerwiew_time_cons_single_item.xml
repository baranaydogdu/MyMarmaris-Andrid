<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/shape_inputbox"
    android:orientation="vertical"
    android:padding="4dp">

    <ImageView
        android:id="@+id/del_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/error_icon" />

    <ImageView
        android:id="@+id/check_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/checkicon" />


    <EditText
        android:id="@+id/date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/shape_inputbox"
        android:clickable="false"
        android:ems="10"
        android:enabled="false"
        android:focusable="false"
        android:gravity="center"
        android:hint="Date"
        android:inputType="time"
        android:linksClickable="false"
        android:longClickable="false"
        android:padding="10dp"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/hour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/hour"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/shape_inputbox"
        android:ems="10"
        android:focusable="false"
        android:gravity="center"
        android:hint="Time"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/date"
        app:layout_constraintEnd_toStartOf="@+id/minute"
        app:layout_constraintTop_toTopOf="@+id/date" />

    <EditText
        android:id="@+id/minute"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/shape_inputbox"
        android:ems="10"
        android:focusable="false"
        android:gravity="center"
        android:hint="Time"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/hour"
        app:layout_constraintEnd_toStartOf="@+id/del_icon"
        app:layout_constraintTop_toTopOf="@+id/hour" />

    <EditText
        android:id="@+id/date2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/shape_inputbox"
        android:clickable="false"
        android:ems="10"
        android:enabled="false"
        android:focusable="false"
        android:gravity="center"
        android:hint="Date"
        android:inputType="time"
        android:linksClickable="false"
        android:longClickable="false"
        android:padding="10dp"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/hour2"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/date" />

    <EditText
        android:id="@+id/hour2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/shape_inputbox"
        android:ems="10"
        android:focusable="false"
        android:gravity="center"
        android:hint="Time"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/date2"
        app:layout_constraintEnd_toStartOf="@+id/minute2"
        app:layout_constraintTop_toTopOf="@+id/date2" />

    <EditText
        android:id="@+id/minute2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_inputbox"
        android:ems="10"
        android:focusable="false"
        android:gravity="center"
        android:hint="Time"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/date2"
        app:layout_constraintEnd_toEndOf="@+id/minute"
        app:layout_constraintTop_toTopOf="@+id/date2" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/date2"
        app:layout_constraintStart_toStartOf="@+id/date"
        app:layout_constraintTop_toTopOf="@+id/date2"
        app:srcCompat="@drawable/plus" />

</androidx.constraintlayout.widget.ConstraintLayout>